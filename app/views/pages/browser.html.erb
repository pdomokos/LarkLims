<% content_for :title, "LarkLims - Dashboard" %>

<div class="content clearfix">

    <div class="contenthead-spaceonly">
        <!--<span>Dashboard</span>-->
    </div>
    <div id="browser-menu-tab" class="browser-content clearfix">
        <div class="browser-subnav clearfix">
            <%= link_to "New Order", "#", :class => "button primary right", :id => "new-order-button" %>
            <%= link_to "New Product", new_product_path, :class => "button primary right hidden" , :id => "new-product-button" %>
            <%= link_to "New User", new_user_path, :class => "button primary right hidden" , :id => "new-user-button" %>
            <div class="browser-links left">
                <a id="orders-button" class="browser-subnav-item selected">Orders</a>
                <a id="products-button" class="browser-subnav-item">Products</a>
                <a id="users-button" class="browser-subnav-item">Users</a>
            </div>
        </div>

        <div id="browser-list-header-tab" class="browser-list-header clearfix">
            <label class="browser-list-header-select-all">
                <input type="checkbox" />
            </label>
            <div class="browser-list-filters">
                <div id="orders-title" class="browser-list-header-toggle states left">
                    <a id="order-stat-open" href="#" class="button-link selected"><i class="fa fa-arrow-circle-o-up"></i> 3 Open</a>
                    <a id="order-stat-closed" href="#" class="button-link"><i class="fa fa-check"></i> 2 Completed</a>
                </div>
                <div class="browser-list-header-toggle right">
                  <div class="left select-menu">


                        <div id="order-header" class="hidden">
                            <span id="order-sort-status-button" class="button-link select-menu-button">
                                Status
                            </span>
                            <div id="order-sort-status-menu" class="select-box-holder hidden">
                                <div id="select-header" class="select-box-header">
                                    Status
                                    <span id="select-menu-close" class="select-menu-close fa fa-close"></span>
                                </div>
                                <div class="select-box">
                                    <ul style="list-style-type: none;">
                                        <li><div id="checkic" class="hidden fa fa-check"></div> <a id="completed-button" class="list-button-link">Completed</a></li>
                                        <li><div id="checkic" class="hidden fa fa-check"></div><a id="uncompleted-button" class="list-button-link">Uncompleted</a></li>
                                    </ul>
                                </div>
                            </div>

                            <span id="order-sort-created-by-button" class="button-link select-menu-button">
                                Created by
                            </span>
                            <div id="order-sort-created-by-menu" class="select-box-holder hidden">
                                <div id="select-header" class="select-box-header">
                                    Created by
                                    <span id="select-menu-close" class="select-menu-close fa fa-close"></span>
                                </div>
                                <div class="select-box">
                                    <ul id="user-selection-list">

                                    </ul>
                                </div>
                            </div>

                            <span id="order-sort-date-button" class="button-link select-menu-button">
                                Sort
                            </span>
                            <div id="order-sort-date-menu" class="select-box-holder hidden">
                                <div id="select-header" class="select-box-header">
                                    Sort by
                                    <span id="select-menu-close" class="select-menu-close fa fa-close"></span>
                                </div>
                                <div class="select-box">
                                    <ul>
                                        <li><a id="sortbydate-asc-button" class="list-button-link">Oldest</a></li>
                                        <li><a id="sortbydate-desc-button" class="list-button-link">Newest</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>


                      <div id="product-header" class="hidden">
                            <span id="product-sort-button" class="button-link select-menu-button">
                                Sort
                            </span>
                          <div id="product-sort-menu" class="select-box-holder hidden">
                              <div id="select-header" class="select-box-header">
                                  Sort by
                                  <span id="select-menu-close" class="select-menu-close fa fa-close"></span>
                              </div>
                              <div class="select-box">
                                  <ul>
                                     <li><a id="order-by-product-name-button" class="list-button-link">Name</a></li>
                                    <li><a id="order-by-product-date-button" class="list-button-link">Date</a></li>
                                  </ul>
                              </div>
                          </div>
                      </div>


                      <div id="user-header" class="hidden">
                            <span id="user-sort-button" class="button-link select-menu-button">
                                Sort
                            </span>
                          <div id="user-sort-menu" class="select-box-holder hidden">
                              <div id="select-header" class="select-box-header">
                                  Sort by
                                  <span id="select-menu-close" class="select-menu-close fa fa-close"></span>
                              </div>
                              <div class="select-box">
                                  <ul>
                                     <li><a id="order-by-user-name-button" class="list-button-link">Name</a></li>
                                    <li><a id="order-by-user-date-button" class="list-button-link">Date</a></li>
                                  </ul>
                              </div>
                          </div>
                      </div>


                    </div>
                </div>
            </div>
        </div>
        <ul id="orders-table" class="browser-list">
            <!--loaded dynamically by load_orders()-->
        </ul>
        <ul id="products-table" class="browser-list hidden">
            <!--loaded dynamically by load_orders()-->
        </ul>
        <ul id="users-table" class="browser-list hidden">
            <!--loaded dynamically by load_orders()-->
        </ul>

        <%= render "new_order_form" %>
    </div>


    <div class="hidden">
        <ul>
            <li id="list_useritem_template">
                <div class="list-cell">
                    <a class="list-cell-title-link"></a>
                </div>
            </li>
        </ul>
    </div>

    <div class="hidden">
        <ul>
            <li id="list_item_template" class="browser-list-item">
                <label class="browser-list-cell browser-list-cell-checkbox">
                    <input type="checkbox">
                </label>
                <div class="browser-list-cell">
                    <a class="browser-list-cell-title-link" href="#"></a>
                    <div class="browser-meta">
                        <span></span>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    <div>
        <p id="notice"><%= flash[:notice] %></p>
        <p id="alert"><%= flash[:alert] %></p>
    </div>
</div>

<script type="text/javascript">
    browser_menu();
    load_orders();
    load_user_filter();

</script>
